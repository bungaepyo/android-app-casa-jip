<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.casa_jip">
    <!-- adds the required permission request -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".task.TaskMainActivity"
            android:label="@string/task"/>
        <activity android:name=".gallery.GalleryMainActivity"
            android:label="@string/gallery"/>
        <activity android:name=".chat.ChatMainActivity"
            android:label="@string/chat"/>
        <activity android:name=".gallery.ImageActivity"
            android:label="@string/gallery"/>
        <activity android:name=".login.LoginActivity"
            android:label="@string/login"/>
        <activity android:name=".login.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".login.RegistrationActivity"
            android:label="@string/register"/>
    </application>

</manifest>